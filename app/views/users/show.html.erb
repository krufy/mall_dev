<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pasword_hash) %>:</strong></dt>
  <dd><%= @user.pasword_hash %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @user.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activate_token) %>:</strong></dt>
  <dd><%= @user.activate_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active_token_at) %>:</strong></dt>
  <dd><%= @user.active_token_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_activated) %>:</strong></dt>
  <dd><%= @user.is_activated %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pass_reset_token) %>:</strong></dt>
  <dd><%= @user.pass_reset_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pass_reset_token_at) %>:</strong></dt>
  <dd><%= @user.pass_reset_token_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pass_reset_at) %>:</strong></dt>
  <dd><%= @user.pass_reset_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_login_at) %>:</strong></dt>
  <dd><%= @user.last_login_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_login_ip) %>:</strong></dt>
  <dd><%= @user.last_login_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_login_at) %>:</strong></dt>
  <dd><%= @user.current_login_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_login_ip) %>:</strong></dt>
  <dd><%= @user.current_login_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_ids) %>:</strong></dt>
  <dd><%= @user.role_ids %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
