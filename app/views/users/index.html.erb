<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:pasword_hash) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:mobile) %></th>
      <th><%= model_class.human_attribute_name(:activate_token) %></th>
      <th><%= model_class.human_attribute_name(:active_token_at) %></th>
      <th><%= model_class.human_attribute_name(:is_activated) %></th>
      <th><%= model_class.human_attribute_name(:pass_reset_token) %></th>
      <th><%= model_class.human_attribute_name(:pass_reset_token_at) %></th>
      <th><%= model_class.human_attribute_name(:pass_reset_at) %></th>
      <th><%= model_class.human_attribute_name(:last_login_at) %></th>
      <th><%= model_class.human_attribute_name(:last_login_ip) %></th>
      <th><%= model_class.human_attribute_name(:current_login_at) %></th>
      <th><%= model_class.human_attribute_name(:current_login_ip) %></th>
      <th><%= model_class.human_attribute_name(:role_ids) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.username %></td>
        <td><%= user.pasword_hash %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.activate_token %></td>
        <td><%= user.active_token_at %></td>
        <td><%= user.is_activated %></td>
        <td><%= user.pass_reset_token %></td>
        <td><%= user.pass_reset_token_at %></td>
        <td><%= user.pass_reset_at %></td>
        <td><%= user.last_login_at %></td>
        <td><%= user.last_login_ip %></td>
        <td><%= user.current_login_at %></td>
        <td><%= user.current_login_ip %></td>
        <td><%= user.role_ids %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
