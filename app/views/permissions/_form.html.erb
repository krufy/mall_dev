<%= form_for @permission, :html => { :class => "form-horizontal permission" } do |f| %>

  <% if @permission.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@permission.errors.count, "error") %> prohibited this permission from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @permission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :namespace, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :namespace, :class => 'form-control' %>
    </div>
    <%=f.error_span(:namespace) %>
  </div>
  <div class="form-group">
    <%= f.label :controller, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :controller, :class => 'form-control' %>
    </div>
    <%=f.error_span(:controller) %>
  </div>
  <div class="form-group">
    <%= f.label :action, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :action, :class => 'form-control' %>
    </div>
    <%=f.error_span(:action) %>
  </div>
  <div class="form-group">
    <%= f.label :role_ids, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :role_ids, :class => 'form-control' %>
    </div>
    <%=f.error_span(:role_ids) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                permissions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
